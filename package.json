{
  "name": "invee",
  "version": "0.1.0",
  "author": "Nikolay Rademacher",
  "private": true,
  "scripts": {
    "build:1-migrate": "prisma migrate deploy",
    "build:2-build": "next build",
    "build": "run-s build:*",
    "db-up": "docker-compose up -d",
    "db-seed": "prisma db seed",
    "db-migrate-dev": "yarn prisma migrate dev",
    "db-nuke": "docker-compose down --volumes --remove-orphans",
    "dev": "next dev",
    "dx": "run-s db-up db-migrate-dev db-seed dev",
    "start": "next start",
    "format": "prettier --ignore-path .gitignore \"**/*.+(ts|tsx|js|css|json)\" --write --list-different --config prettier.config.js",
    "lint": "eslint src",
    "lint-fix": "yarn lint --fix",
    "test-dev": "start-server-and-test dev 3000 test",
    "test-start": "start-server-and-test start 3000 test",
    "test": "run-s test:*",
    "test:unit": "jest",
    "test:e2e": "jest --config jest.playwright.config.ts",
    "ts-node": "ts-node --compiler-options \"{\\\"module\\\":\\\"commonjs\\\"}\"",
    "postinstall": "prisma generate && yarn format",
    "prepare": "husky install"
  },
  "lint-staged": {
    "./{*,src/**/*}.{js,ts,jsx,tsx}": [
      "yarn format",
      "yarn lint-fix"
    ],
    "./prisma/schema.prisma": [
      "prisma format"
    ]
  },
  "prisma": {
    "seed": "yarn ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@fontsource/open-sans": "^4.5.5",
    "@fontsource/pt-sans": "^4.5.2",
    "@fontsource/pt-sans-caption": "^4.5.2",
    "@fontsource/pt-sans-narrow": "^4.5.2",
    "@heroicons/react": "^1.0.5",
    "@hookform/resolvers": "^2.8.8",
    "@prisma/client": "^3.10.0",
    "@radix-ui/react-avatar": "^0.1.4",
    "@radix-ui/react-dialog": "^0.1.6",
    "@radix-ui/react-label": "^0.1.5",
    "@trpc/client": "^9.17.0",
    "@trpc/next": "^9.17.0",
    "@trpc/react": "^9.17.0",
    "@trpc/server": "^9.17.0",
    "bcrypt": "^5.0.1",
    "chart.js": "^3.7.0",
    "classnames": "^2.3.1",
    "nanoid": "^3.3.1",
    "next": "^12.1.0",
    "next-auth": "^4.2.1",
    "react": "^17.0.2",
    "react-chartjs-2": "^4.0.1",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.27.1",
    "react-query": "^3.34.16",
    "react-select": "^5.2.2",
    "superjson": "^1.8.1",
    "validator": "^13.7.0",
    "zod": "^3.20.0"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.4.0",
    "@types/bcrypt": "^5.0.0",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@types/react": "^17.0.39",
    "@types/validator": "^13.7.1",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.26.0",
    "autoprefixer": "^10.4.2",
    "eslint": "^7.32.0",
    "eslint-config-next": "^12.1.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": ">=6",
    "jest": "^27.5.1",
    "jest-playwright": "^0.0.1",
    "jest-playwright-preset": "^1.4.5",
    "lint-staged": ">=10",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.19.2",
    "postcss": "^8.4.7",
    "prettier": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.8",
    "prisma": "^3.10.0",
    "start-server-and-test": "^1.12.0",
    "tailwindcss": "^3.0.23",
    "tailwindcss-hero-patterns": "^0.0.1",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.5.0",
    "typescript": "4.5.5",
    "zod-prisma": "^0.5.4"
  },
  "publishConfig": {
    "access": "restricted"
  }
}
